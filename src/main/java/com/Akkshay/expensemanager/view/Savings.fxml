<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.Akkshay.expensemanager.controller.SavingsController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label text="Savings Manager">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      
      <!-- Summary Cards -->
      <HBox spacing="20.0">
         <children>
            <VBox prefHeight="120.0" prefWidth="250.0" style="-fx-background-color: linear-gradient(to bottom right, #11998e, #38ef7d); -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 0);">
               <children>
                  <Label text="ðŸ’µ Total Savings" textFill="WHITE">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <Label fx:id="lblTotalSavings" text="Rs 0.00" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="32.0" />
                     </font>
                  </Label>
                  <Label fx:id="lblSavingsCount" text="0 savings entries" textFill="WHITE">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
            </VBox>
            
            <VBox prefHeight="120.0" prefWidth="250.0" style="-fx-background-color: linear-gradient(to bottom right, #fa709a, #fee140); -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 0);">
               <children>
                  <Label text="ðŸŽ¯ Active Goals" textFill="WHITE">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <Label fx:id="lblActiveGoals" text="0" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="32.0" />
                     </font>
                  </Label>
                  <Label text="goals in progress" textFill="WHITE">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
      
      <HBox spacing="10.0" alignment="CENTER_LEFT">
         <children>
            <TextField fx:id="txtAmount" promptText="Amount" />
            <DatePicker fx:id="dpDate" promptText="Date" />
            <TextField fx:id="txtGoal" promptText="Goal" prefWidth="200.0" />
            <TextField fx:id="txtDescription" promptText="Description" prefWidth="300.0" />
            <Button mnemonicParsing="false" onAction="#handleAddSavings" text="Add Savings" minWidth="100.0" />
            <Button mnemonicParsing="false" onAction="#handleUpdateSavings" text="Update" minWidth="80.0" />
            <Button mnemonicParsing="false" onAction="#handleDeleteSavings" text="Delete" minWidth="80.0" />
         </children>
      </HBox>
      <TableView fx:id="tblSavings" prefHeight="400.0" prefWidth="600.0" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
          <TableColumn fx:id="colAmount" prefWidth="100.0" text="Amount" />
            <TableColumn fx:id="colDate" prefWidth="100.0" text="Date" />
            <TableColumn fx:id="colGoal" prefWidth="150.0" text="Goal" />
            <TableColumn fx:id="colDescription" prefWidth="300.0" text="Description" />
        </columns>
      </TableView>
   </children>
</VBox>
